{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <h1>Mon Profil</h1>
    
    <p>Nom : {{ user.lastName }}</p>
    <p>Prénom : {{ user.firstName }}</p>
    <p>Email : {{ user.email }}</p>
    <p>Téléphone : {{ user.phoneNumber }}</p>
    <p>Catégorie : {{ user.category }}</p>
    
    {% if user.profilePicture %}
        <img src="{{ vich_uploader_asset(user, 'profilePictureFile') }}" alt="Photo de profil" />
    {% else %}
        <p>Pas de photo de profil</p>
    {% endif %}
    
    {% if user.cvFilename %}
        <p>CV : <a href="{{ vich_uploader_asset(user, 'cvFile') }}" target="_blank">Voir le CV</a></p>
    {% else %}
        <p>Pas de CV uploadé</p>
    {% endif %}
    
    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Modifier mon profil</a>
{% endblock %}