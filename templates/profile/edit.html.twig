{# templates/profile/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Modifier le profil</h1>
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    
    <div class="mb-3">
        {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.firstName) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.lastName) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.phoneNumber, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.phoneNumber) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}
