{% extends 'base.html.twig' %}

{% block title %}Offres d'emploi{% endblock %}

{% block body %}
    <h1>Offres d'emploi</h1>
    <div class="job-list">
        {% for job in jobs %}
            <div class="job-offer">
                <h2>{{ job.title }}</h2>
                <p>{{ job.description }}</p>
                <p><strong>Entreprise:</strong> {{ job.company }}</p>
                <button class="btn btn-primary">Voir d√©tails</button>
                <button class="btn btn-secondary favorite-btn" data-id="{{ job.id }}">
                    
                        
                    
                        Ajouter aux favoris
                    
                </button>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .job-offer {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .job-list {
            margin-top: 20px;
        }

        .job-offer h2 {
            margin-top: 0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.querySelectorAll('.favorite-btn').forEach(button => {
            button.addEventListener('click', function() {
                const jobId = this.getAttribute('data-id');
                fetch(`/favorite/toggle/${jobId}`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.textContent = data.isFavorite ? 'Retirer des favoris' : 'Ajouter aux favoris';
                    }
                });
            });
        });
    </script>
{% endblock %}
